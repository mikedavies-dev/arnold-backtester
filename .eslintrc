{
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "ignorePatterns": [],
  "plugins": ["import", "jest"],
  "parser": "@babel/eslint-parser",
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-var": "error"
  },
  "env": {
    "node": true,
    "jest/globals": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "overrides": [
    {
      "extends": ["plugin:@typescript-eslint/recommended"],
      "files": ["**/*.ts", "**/*.tsx"],
      "plugins": ["@typescript-eslint", "jest"],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "env": {
        "jest": true,
        "jest/globals": true,
        "node": true
      },
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
        ],
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}
